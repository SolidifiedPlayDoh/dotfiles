# Git configuration for LLM agents
# Optimized for simple, parseable output without colors or pagers
# Includes base configuration from main git config

[include]
	path = ~/.config/git/config

[core]
	pager = cat

[interactive]
	diffFilter = cat

[pager]
	diff = false
	log = false
	show = false
	status = false
	branch = false

[color]
	ui = false
	branch = false
	diff = false
	interactive = false
	status = false

[advice]
	# Disable all hints for cleaner output
	pushUpdateRejected = false
	statusHints = false
	statusUoption = false
	commitBeforeMerge = false
	resolveConflict = false
	detachedHead = false
	rmHints = false
	skippedCherryPicks = false
	addIgnoredFile = false
	addEmptyPathspec = false
