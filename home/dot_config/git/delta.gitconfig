[core]
pager = delta

[alias]
dss = -c delta.features=side-by-side diff

[interactive]
diffFilter = delta --color-only

[delta]
hyperlinks = true
navigate = true
line-numbers = false
syntax-theme = "Catppuccin Mocha"

[merge]
conflictstyle = zdiff3

[diff]
colorMoved = default

