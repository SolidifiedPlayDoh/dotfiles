# Ghostty config
#
# Run `ghostty +show-config --default --docs` to view a list of
# all available config options and their default values.
#
# Additionally, each config option is also explained in detail
# on Ghostty's website, at https://ghostty.org/docs/config.

# Font Configuration
font-family = MonoLisa Nerd Font
font-size = 10
font-feature = +calt,+liga,+dlig,+zero,+ss02,+ss10,+ss11,+ss12,+ss13,+ss14,+ss15,+ss16
font-synthetic-style = false

# Shell Integration
shell-integration = zsh
shell-integration-features = cursor,sudo,title

# OS
mouse-hide-while-typing = true

# Cursor
cursor-invert-fg-bg = true
cursor-style-blink = false

# Theme
# Having both keeps flashing light mode color on new tabs
# theme = dark:Catppuccin Mocha,light:Catppuccin Latte
theme = Catppuccin Mocha
split-divider-color = "#585b70"
unfocused-split-fill = "#181824"
unfocused-split-opacity = 0.85

# load keybinds
config-file = config-keybind

# load hyperlink configuration
config-file = config-hyperlinks

