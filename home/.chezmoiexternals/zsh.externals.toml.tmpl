# Zsh Plugins and Tools
# Managed via chezmoi externals with Renovate automation
{{ if lookPath "zsh" }}

# Znap: Fast, minimal zsh plugin manager with lazy loading
# Purpose: Caches eval commands (mise, atuin, starship, zoxide) for faster shell startup
# Updates: Weekly via Renovate tracking master branch
# renovate: repo=marlonrichert/zsh-snap branch=main
[".zsh/znap/zsh-snap"]
    type = "git-repo"
    url = "https://github.com/marlonrichert/zsh-snap.git"
    revision = "25754a45d9ceafe6d7d082c9ebe40a08cb85a4f0"
    refreshPeriod = "168h"

# zsh-autosuggestions: Fish-like command suggestions
# Purpose: Suggests commands as you type based on history and completions
# Updates: Weekly via Renovate tracking master branch
# renovate: repo=zsh-users/zsh-autosuggestions branch=master
[".zsh/plugins/zsh-autosuggestions"]
    type = "git-repo"
    url = "https://github.com/zsh-users/zsh-autosuggestions.git"
    revision = "85919cd1ffa7d2d5412f6d3fe437ebdbeeec4fc5"
    refreshPeriod = "168h"

# zsh-syntax-highlighting: Real-time command validation
# Purpose: Highlights commands as you type to catch errors before execution
# Updates: Weekly via Renovate tracking master branch
# renovate: repo=zsh-users/zsh-syntax-highlighting branch=master
[".zsh/plugins/zsh-syntax-highlighting"]
    type = "git-repo"
    url = "https://github.com/zsh-users/zsh-syntax-highlighting.git"
    revision = "5eb677bb0fa9a3e60f0eff031dc13926e093df92"
    refreshPeriod = "168h"

{{ end }}
